{{#each deviceTypes}}
    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 padding-top ">
        <div class="product-wrapper rounded dark-grey center">
            <div class="icon-wrapper">
                <img src="/mdm/public/devices/{{name}}/images/{{name}}-thumb.png">
            </div>
            <h2 class="white center">{{storeTitle}}</h2>

            <div class="text-wrapper">{{storeDescription}}<br></div>

            <a href="#" class="wr-btn grey-btn"
               onclick="document.location.href='/mdm/devices/{{name}}';">Connect</a>
        </div>
    </div>
{{/each}}
<br class="c-both"/>